{
    "name": "subhasish/php-code-checker",
    "description": "PHP Code Analysis and Checking Tools",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Subhasish Ghosh",
            "email": "subhasishghosh@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0"
    },
    "require-dev" : {
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.3",
        "wimg/php-compatibility": "^8.1"
    },

    "config": {
    	"optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
